<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Forget"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/LL_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LL_phone_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/et_phone_for"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:textSize="18sp"
                android:textColorHint="#acbbff"
                android:gravity="center"
                android:background="@null"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_SMS_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/et_SMS_for"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:textColorHint="#acbbff"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@null"/>

            <Button
                android:id="@+id/btn_SMS_for"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="发送验证码"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_pwd_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <EditText
                android:id="@+id/et_pwd_for"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:textSize="18sp"
                android:textColorHint="#acbbff"
                android:inputType="textPassword"
                />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_btn_for"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_forget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="找回密码"
            android:textSize="18sp"
            android:layout_below="@id/LL_pwd_for"
            />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>