<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Forget" >


        <LinearLayout
            android:id="@+id/LL_phone_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/et_phone_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:textSize="18sp"
                android:textColorHint="#acbbff"
                android:inputType="textPassword"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RL_SMS_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LL_phone_for"
            android:layout_marginTop="20dp"

            >

            <EditText
                android:id="@+id/et_SMS_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:textColorHint="#acbbff"
                android:textSize="18sp"
                />

            <Button
                android:id="@+id/btn_SMS_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LL_pwd_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/RL_SMS_for"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密碼"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/et_pwd_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入新密码"
                android:textSize="18sp"
                android:textColorHint="#acbbff"
                android:inputType="textPassword"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="18sp"
            android:layout_below="@id/LL_pwd_for"
            />

    </RelativeLayout>