<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hhhhentai.UseTool.ExpressageActivity">

    <LinearLayout
        android:id="@+id/Ll_expressageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Im_expressagequit"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="快递查询"
            android:textSize="25sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Li_expressagecp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ll_expressageTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="快递公司:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/Et_expressagecp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:maxLines="1"
            android:text="申通"
            android:background="@null"
            android:hint="请输入快递公司名"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li_expressagenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Li_expressagecp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="快递单号:"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/Et_expressagenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="请输入快递的单号"
            android:gravity="center"
            android:background="@null"
            android:text="3392110977509"
            android:maxLines="1"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li_expressagequery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Li_expressagenum"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Bt_expressagequery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li_expressageinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Li_expressagequery"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

       <ListView
           android:id="@+id/Lv_expressagelist"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       </ListView>
    </LinearLayout>
</RelativeLayout>
