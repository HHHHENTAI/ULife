<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mintcream"
    android:orientation="vertical">

        <!--盛光明编写的工具栏界面-->
        <LinearLayout
            android:id="@+id/Li_ToolShow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Im_ToolshowPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/Tv_Toolshowsentence"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="18sp" />
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <!--生活工具-->
            <LinearLayout
                android:id="@+id/LL_Tooltitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/Tv_Tooltitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生活工具"
                    android:textSize="18sp" />
            </LinearLayout>


            <GridView
                android:id="@+id/Gv_Toolgridview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="4"
                android:horizontalSpacing="10dp"></GridView>

            <!--学习工具-->
            <LinearLayout
                android:id="@+id/LL_Tooltitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/Tv_Tooltitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学习工具"
                    android:textSize="18sp" />
            </LinearLayout>


            <GridView
                android:id="@+id/Gv_Toolgridview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="4"
                android:horizontalSpacing="10dp">
            </GridView>

        </LinearLayout>
</LinearLayout>